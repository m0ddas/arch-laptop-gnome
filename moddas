xdg-user-dirs-update
sudo pacman -S git
cd /opt
sudo git clone https://aur.archlinux.org/yay-git.git
sudo chown -R modda:wheel ./yay-git
cd yay-git
makepkg -si
yay -Syu
curl -sS https://download.spotify.com/debian/pubkey_0D811D58.gpg | gpg --import -
yay -S spotify xviewer pix tela-icon-theme-git breeze-default-cursor-theme
